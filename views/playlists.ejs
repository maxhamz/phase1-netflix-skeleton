<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MY PLAYLIST</title>
</head>
<body>

    <h3>
        <a href="/users/logout">LOGOUT</a>
        <BR>
        <a href="/movies">MOVIE GALLERY</a>
    </h3>
    <br>

    <table>
        <tr>
            <% for(let i = 0; i < headers.length-2; i++) { %>
                <th> <%= headers[i].toUpperCase() %>  </th>
            <% } %>
                <th>  ACTION  </th>
        </tr>

        <% for(let j = 0; j < data.length; j++) { %>
            <tr>
                <% for(let k = 0; k < headers.length-2; k++) { %>
                    <td> <%= data[j].Movie[headers[k]] %> </td>
                <% } %>
                    <td>
                        <form method="GET" 
                        action="/playlists/deleteMovie/<%= data[j].Movie.id %>">
                            <input type="submit" value="Drop">
                        </form>
                    </td>
            </tr>
        <% } %>
    </table>
    
</body>
</html>